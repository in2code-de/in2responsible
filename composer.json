{
  "name": "in2code/in2responsible",
  "type": "typo3-cms-extension",
  "description": "Shows the responsible editor for a page.",
  "authors": [
    {
      "name": "Sandra Pohl",
      "email": "sandra.pohl@in2code.de",
      "role": "Product owner",
      "homepage": "https://www.in2code.de"
    },
    {
      "name": "Sebastian Stein",
      "email": "sebastian.stein@in2code.de",
      "role": "Developer",
      "homepage": "https://www.in2code.de"
    },
    {
      "name": "Alex Kellner",
      "email": "alexander.kellner@in2code.de",
      "role": "Developer",
      "homepage": "https://www.in2code.de"
    }
  ],
  "license": "GPL-2.0+",
  "require": {
    "php": ">=7.4.0",
    "typo3/cms-core": "^13.0"
  },
  "require-dev": {
    "typo3/cms-backend": "^13.4",
    "typo3/cms-extbase": "^13.4",
    "typo3/cms-extensionmanager": "^13.4",
    "typo3/cms-filelist": "^13.4",
    "typo3/cms-fluid": "^13.4",
    "typo3/cms-frontend": "^13.4",
    "typo3/cms-install": "^13.4",
    "typo3/minimal": "^13"
  },
  "autoload": {
    "psr-4": {
      "In2code\\In2responsible\\": "Classes"
    }
  },
  "extra": {
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".build/public",
      "extension-key": "in2responsible"
    }
  },
  "config": {
    "vendor-dir": ".build/vendor",
    "bin-dir": ".build/bin",
    "sort-packages": true,
    "allow-plugins": {
      "typo3/cms-composer-installers": true,
      "typo3/class-alias-loader": true
    }
  }
}
